{
  "name": "student/sd1-conference-system",
  "type": "project",
  "description": "SD1 Conference system (no DB) - Laravel skeleton + SD1 overlay.",
  "keywords": [
    "laravel",
    "sd1",
    "conference"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}